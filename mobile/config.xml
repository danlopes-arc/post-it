<?xml version='1.0' encoding='utf-8'?>
<widget id="com.danielarcanjo.postit" version="1.0.0" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>post.it</name>
  <description>
    A social mobile app where you can follow other users and see their posts on your timeline.
  </description>
  <author email="dlopesarcanjo9485@conestogac.on.ca" href="http://cordova.io">
    Daniel Lopes Arcanjo
  </author>
  <content src="index.html"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <icon src="logo.png"/>
</widget>
